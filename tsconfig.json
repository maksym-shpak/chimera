{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@chimera/*": [
                "packages/*/src"
            ]
        },
        "target": "ES2021"
    },
    "include": [
        "packages/**/*",
        "apps/**/*"
    ]
}